<%= simple_form_for(@lecture) do |f| %>
  <%= f.input :title, label: 'Title' %>
  <%= f.input :category, label: 'Category' %>
  <%= f.input :price, label: 'Price (â‚¬)' %>
  <%= f.input :start_at, label: 'Desired date and time', as: :string, required: true, input_html: {class: "datepicker"} %>
